<%- include('partials/head.ejs') %>


    <body>
    

        <div style="width: 50%; min-height: 90%; margin-top: 10% ; padding: 20px; border: 1px solid black; border-radius: 20px;"
            class="container text-center">
            <h3>SIGN UP</h3>
            <form action="/resister" method="POST">
                <% if(typeof err!='undefined' ) {%>

                    <div class="alert alert-dismissible alert-danger">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        
                        <strong>
                            <%= err %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Your Name</label>
                                <input type="text" name="Name" class="form-control" id="inputEmail4"
                                    placeholder="Enter full Name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Email</label>
                                <input type="email" name="Email" class="form-control" id="inputEmail4"
                                    placeholder="Email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Password</label>
                                <input type="password" name="Password" class="form-control" id="inputPassword4"
                                    placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputAddress">confirmPasword</label>
                            <input type="password" name="cPassword" class="form-control" id="inputAddress"
                                placeholder="Re-enter Password">
                        </div>
                        <div class="form-group ">
                            <label for="inputAddress2">Orgnization Name </label>
                            <input type="text" name="orgName" class="form-control" id="inputAddress2"
                                placeholder="Your Orgnization name">
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary ">Sign up</button>
                        </div>
            </form>
            <div>
            You Already Have an Account...?<a href="/login">Click here..</a>
            </div>
            <div>
            Go Back to home...?<a href="/">Click here..</a>
            </div>
        </div>
        <!-- //jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

        <!-- //Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </body>

    </html>