<%- include('partials/head.ejs') %>


<body>
    <%- include('partials/Nav.ejs') %>
    
    <div id="add-site-page">

        <main id="site-main">
            <div class="container">
                
                <div class="form-tital text-center">
                    <h2 class="text-dark">New Site</h2>
                    <span class="text-light">Use the below form to add new site</span>
                </div>
                <!-- form -->
                <form action="/add_site" method="POST" id="add_site">
                    <div class="new_site">
                        <div class="form-group">
                        
                            <label for="Name">Name</label>
                            <input type="hidden" name="user" value="<%= user.Email %> "> 
                            <!-- <input type="hidden" name="site_id" value=" "> -->
                            <input type="text" name="site_name" value="" placeholder="Enter Name of site">
                        </div>
                        <div class="new-labour">
                            <div class="form-group">
                                <label for="type">owner</label>
                                <input type="text" name="site_owner" value="" placeholder="Enter owner name">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn text-dark update">Save</button>
                            </div>
                        </div>
                </form>
            </div>
        </main>
    </div>
    <script src="/js/add-site.js"></script>
    <script src="/js/home.js"> </script>
</body>

</html>